{
  "title": "Vi Style Addon",
  "rules": [{
    "description": "Change Option + Shift + h/j/k/l to Arrows",
    "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "h",
          "modifiers": {
            "mandatory": [
              "option",
              "left_shift"
            ]
          }
        },
        "to": [
          {
            "key_code": "left_arrow",
            "modifiers": [
              "left_shift"
            ]
          }
        ]
      },
      {
        "type": "basic",
        "from": {
          "key_code": "j",
          "modifiers": {
            "mandatory": [
              "option",
              "left_shift"
            ]
          }
        },
        "to": [
          {
            "key_code": "down_arrow",
            "modifiers": [
              "left_shift"
            ]
          }
        ]
      },
      {
        "type": "basic",
        "from": {
          "key_code": "k",
          "modifiers": {
            "mandatory": [
              "option",
              "left_shift"
            ]
          }
        },
        "to": [
          {
            "key_code": "up_arrow",
            "modifiers": [
              "left_shift"
            ]
          }
        ]
      },
      {
        "type": "basic",
        "from": {
          "key_code": "l",
          "modifiers": {
            "mandatory": [
              "option",
              "left_shift"
            ]
          }
        },
        "to": [
          {
            "key_code": "right_arrow",
            "modifiers": [
              "left_shift"
            ]
          }
        ]
      }
    ]
  }]
}
